{
	"name": "WikiRights ShareBar",
	"version": "1.0.0",
	"author": "Dror S. [FFS] ([http://www.kolzchut.org.il Kol-Zchut])",
	"url": "https://github.com/kolzchut/mediawiki-extensions-ShareBar",
	"descriptionmsg": "ext-sharebar-desc",
	"license-name": "GPL-3.0",
	"type": "parserhook",
	"MessagesDirs": {
		"ShareBar": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"ShareBarMagic": "ShareBar.i18n.magic.php"
	},
	"AutoloadClasses": {
		"ExtShareBarHooks": "ShareBar.hooks.php",
		"ExtShareBar": "ShareBar_body.php"
	},
	"ResourceModules": {
		"ext.wr.ShareBar": {
			"styles": {
				"ext.shareBar.less": {
					"media": "screen and ( min-width: 768px )"
				},
				"ext.shareBar.mobile.less": {
					"media": "screen and ( max-width: 767px )"
				}
			},
			"position": "top",
			"dependencies": [
				"skins.helena.bootstrap",
				"skins.helena.bootstrapOverride"
			]
		},
		"ext.wr.ShareBar.js": {
			"scripts": "ext.shareBar.js",
			"position": "bottom",
			"messages": [
				"ext-sharebar-loading"
			],
			"templates": {
				"modal.mustache": "../templates/modal.mustache"
			},
			"dependencies": [
				"skins.helena.bootstrap.js"
			]
		},
		"ext.wr.ShareBar.analytics": {
			"position": "bottom",
			"scripts": [
				"ext.shareBar.analytics.js"
			],
			"dependencies": [
				"ext.wr.ShareBar.js"
			],
			"targets": [
				"mobile",
				"desktop"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "modules",
		"remoteExtPath": "WikiRights/ShareBar/modules"
	},
	"Hooks": {
		"ParserFirstCallInit": [
			"ExtShareBarHooks::onParserFirstCallInit"
		],
		"ResourceLoaderGetConfigVars": [
			"ExtShareBarHooks::onResourceLoaderGetConfigVars"
		],
		"BeforePageDisplay": [
			"ExtShareBarHooks::onBeforePageDisplay"
		]
	},
	"config": {
		"_prefix": "eg",
		"ShareBarDisabledServices": [],
		"ShareBarServices": [],
		"ShareBarServicesDefaults": {
			"print": {
				"action": "print"
			},
			"feedback": {
				"width": 800,
				"height": 700,
				"action": "modal"
			},
			"donate": {
				"width": 1050,
				"height": 750,
				"action": "modal"
			},
			"email": {},
			"whatsapp": {},
			"changerequest": {
				"url": "/forms/ChangeRequest/",
				"width": 750,
				"height": 650,
				"action": "modal"
			},
			"send": {
				"url": "/forms/mailArticle/",
				"width": 700,
				"height": 600,
				"action": "modal"
			},
			"facebook": {
				"action": "window",
				"width": 520,
				"height": 350
			},
			"twitter": {
				"action": "window",
				"width": 550,
				"height": 420
			},
			"google": {
				"action": "window",
				"width": 575,
				"height": 400
			}
		}
	},
	"manifest_version": 1
}
