{
	"name": "WikiRights ShareBar",
	"version": "2.0.0",
	"author": "Dror S. [FFS] ([http://www.kolzchut.org.il Kol-Zchut])",
	"url": "https://github.com/kolzchut/mediawiki-extensions-ShareBar",
	"descriptionmsg": "ext-sharebar-desc",
	"license-name": "GPL-3.0",
	"type": "parserhook",
	"requires": {
		"MediaWiki": ">= 1.29.0"
	},
	"MessagesDirs": {
		"ShareBar": [
			"i18n"
		]
	},
	"AutoloadClasses": {
		"ExtShareBarHooks": "ShareBar.hooks.php",
		"ExtShareBar": "ShareBar_body.php"
	},
	"ResourceModules": {
		"ext.wr.ShareBar": {
			"class": "HelenaResourceLoaderModule",
			"styles": {
				"ext.shareBar.less": {
					"media": "screen and ( min-width: 768px )"
				},
				"ext.shareBar.mobile.less": {
					"media": "screen and ( max-width: 767px )"
				}
			},
			"position": "top"
		},
		"ext.wr.ShareBar.js": {
			"scripts": [
				"ext.shareBar.js"
			],
			
			"position": "bottom",
			"messages": [
				"ext-sharebar-loading",
				"ext-sharebar-getlink-success",
				"ext-sharebar-getlink-fail"
			],
			"templates": {
				"modal.mustache": "../templates/modal.mustache"
			},
			"dependencies": [
				"skins.helena.bootstrap.js"
			]
		},
		"ext.wr.ShareBar.analytics": {
			"position": "bottom",
			"scripts": [
				"ext.shareBar.analytics.js"
			],
			"dependencies": [
				"ext.wr.ShareBar.js"
			],
			"targets": [
				"mobile",
				"desktop"
			]
		},
		"clipboard.js": {
			"scripts": "clipboard.js/clipboard.js",
			"targets": [
				"mobile",
				"desktop"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "modules",
		"remoteExtPath": "WikiRights/ShareBar/modules"
	},
	"Hooks": {
		"ResourceLoaderGetConfigVars": [
			"ExtShareBarHooks::onResourceLoaderGetConfigVars"
		],
		"BeforePageDisplay": [
			"ExtShareBarHooks::onBeforePageDisplay"
		]
	},
	"config": {
		"_prefix": "eg",
		"ShareBarDisabledServices": [],
		"ShareBarServices": [],
		"ShareBarMobileServicesLimit": 5,
		"ShareBarMobileServices": [ "whatsapp", "facebook", "email", "telegram", "twitter" ],
		"ShareBarMobileServicesFlipOrder": true,
		"ShareBarServicesDefaults": {
			"print": {
				"action": "print"
			},
			"feedback": {
				"width": 800,
				"height": 700,
				"action": "modal"
			},
			"donate": {
				"width": 1050,
				"height": 750,
				"action": "modal"
			},
			"email": {
				"icon": "envelope"
			},
			"whatsapp": {},
			"telegram": {},
			"getlink": {},
			"send": {
				"url": "/forms/mailArticle/",
				"width": 700,
				"height": 600,
				"action": "modal"
			},
			"facebook": {
				"action": "window",
				"width": 520,
				"height": 350,
				"icon": "facebook-official"
			},
			"twitter": {
				"action": "window",
				"width": 550,
				"height": 420
			}
		}
	},
	"manifest_version": 1
}
